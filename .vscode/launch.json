  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Django",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["runserver"],
      "django": true
    },
    {
      "name": "Python: Upload Locally",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "scrape",
        "--remote",
        "http://localhost:8000",
        "--root",
        "5",
        "--auth",
        "admin:1234"
      ],
      "django": true
    },
    {
      "name": "Python: Reindex PDFs",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["reindex_pdfs"],
      "django": true
    },
    {
      "name": "Python: Regenerate search index",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["update_index"],
      "justMyCode": false,
      "django": true
    },
    {
      "name": "Python: Extract keywords",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["keyword_extract", "--all", "--no_keyword_extract"],
      "justMyCode": false,
      "django": true
    },
    {
      "name": "Python: Regenerate PDF thumbnails",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["regenerate_thumbnails", "--all"],
      "django": true
    },
    {
      "name": "Python: Tests",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "cwd": "${workspaceFolder}/publications/tests",
      "args": ["test", "-p", "test_parser.py"],
      "django": true
    },
    {
      "name": "Webpack",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/webpack",
      "args": ["serve", "--hot", "--progress"],
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ],
  "compounds": [
    {
      "name": "App",
      "configurations": ["Python: Django", "Webpack"]
    }
  ]
}
