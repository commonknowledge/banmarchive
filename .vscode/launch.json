  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Django",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "runserver"
      ],
      "django": true
    },
    {
      "name": "Python: Upload Locally",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "scrape",
        "--remote",
        "http://localhost:8000",
        "--root",
        "5",
        "--auth",
        "admin:1234"
      ],
      "django": true
    },
    {
      "name": "Python: Reindex PDFs",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "reindex_pdfs"
      ],
      "django": true
    },
    {
      "name": "Python: Tests",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "cwd": "${workspaceFolder}/publications/tests",
      "args": [
        "test",
        "-p",
        "test_parser.py"
      ],
      "django": true
    },
    {
      "name": "Webpack",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/webpack",
      "args": [
        "serve",
        "--hot",
        "--progress"
      ],
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart"
    },
  ],
  "compounds": [
    {
      "name": "App",
      "configurations": [
        "Python: Django",
        "Webpack"
      ],
    }
  ]
}