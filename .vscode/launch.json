  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Django",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "runserver"
      ],
      "django": true
    },
    {
      "name": "Python: Tests",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "cwd": "${fileDirname}",
      "args": [
        "test",
        "-p",
        "${fileBasename}"
      ],
      "django": true
    },
    {
      "name": "Webpack",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/webpack",
      "args": [
        "serve",
        "--hot",
        "--progress"
      ],
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart"
    },
  ],
  "compounds": [
    {
      "name": "App",
      "configurations": [
        "Python: Django",
        "Webpack"
      ],
    }
  ]
}